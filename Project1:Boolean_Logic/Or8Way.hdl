/**
 * 8-way Or: 
 * out = (in[0] or in[1] or ... or in[7])
 */

CHIP Or8Way {
    IN in[8];
    OUT out;

    PARTS:
    	Or( a=in[0], b=in[1], out=out1 );
    	Or( a=in[2], b=in[3], out=out2 );
    	Or( a=in[4], b=in[5], out=out3 );
    	Or( a=in[6], b=in[7], out=out4 );
    	Or( a=out1, b=out2, 
    		out=out1Orout2);
    	Or( a=out3, b=out4, 
    	    out=out3Orout4);
    	Or( a=out1Orout2, 
    	    b= out3Orout4, out=out );    
}